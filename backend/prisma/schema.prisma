generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String // hashed
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  playerAccount PlayerAccount?
}

enum LeagueRole {
  TOP
  JUNGLE
  MID
  CARRY
  SUPPORT
}

model PlayerAccount {
  id            Int     @id @default(autoincrement())
  userId        Int     @unique
  description   String
  primaryRole   LeagueRole
  secondaryRole LeagueRole
  gameName      String?
  tagLine       String?
  puuid         String?
  profileIconId Int?
  summonerLevel Int?

  user User @relation(fields: [userId], references: [id])
}

model Team {
  id            Int     @id @default(autoincrement())
  ownerId Int
  name  String
  tag String
  description String?
  
  owner User @relation(fields: [ownerId], references: [id])
  user User[] @relation(fields: [use])
}
