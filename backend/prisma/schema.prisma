generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String // hashed
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  playerAccount PlayerAccount?
}

enum LeagueRole {
  TOP
  JUNGLE
  MID
  CARRY
  SUPPORT
}

model PlayerAccount {
  id            Int         @id @default(autoincrement())
  userId        Int         @unique
  description   String      @default("")
  rating        Int         @default(1000)
  primaryRole   LeagueRole?
  secondaryRole LeagueRole?
  gameName      String?
  tagLine       String?
  puuid         String?
  profileIconId Int?
  summonerLevel Int?

  teams      Team[] @relation("TeamMembers")
  ownedTeams Team[] @relation("TeamOwner")

  user        User             @relation(fields: [userId], references: [id])
  invitations TeamInvitation[]
}

model Team {
  id          Int    @id @default(autoincrement())
  ownerId     Int
  name        String @unique
  tag         String
  description String @default("")
  rating      Int    @default(0)

  owner       PlayerAccount    @relation("TeamOwner", fields: [ownerId], references: [id])
  members     PlayerAccount[]  @relation("TeamMembers")
  invitations TeamInvitation[]
}

model TeamInvitation {
  id        Int      @id @default(autoincrement())
  teamId    Int
  playerId  Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  // TODO : use enum
  status    String   @default("PENDING") // PENDING, ACCEPTED, DECLINED

  team   Team          @relation(fields: [teamId], references: [id])
  player PlayerAccount @relation(fields: [playerId], references: [id])
}
