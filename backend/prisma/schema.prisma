generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String // hashed
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  playerAccount PlayerAccount?
}

enum LeagueRole {
  TOP
  JUNGLE
  MID
  CARRY
  SUPPORT
}

model PlayerAccount {
  id            Int         @id @default(autoincrement())
  userId        Int         @unique
  description   String      @default("")
  rating        Int         @default(1000)
  primaryRole   LeagueRole?
  secondaryRole LeagueRole?
  gameName      String?
  tagLine       String?
  puuid         String?
  profileIconId Int?
  summonerLevel Int?

  teams      Team[] @relation("TeamMembers")
  ownedTeams Team[] @relation("TeamOwner")

  user              User               @relation(fields: [userId], references: [id])
  invitations       TeamInvitation[]
  PlayerPosting     PlayerPosting[]
  Lobby             Lobby[]
  LobbyPlayer       LobbyPlayer[]
  matchParticipants MatchParticipant[]
}

model Team {
  id          Int    @id @default(autoincrement())
  ownerId     Int
  name        String @unique
  tag         String @unique
  description String @default("")
  rating      Int    @default(0)

  owner       PlayerAccount    @relation("TeamOwner", fields: [ownerId], references: [id])
  members     PlayerAccount[]  @relation("TeamMembers")
  invitations TeamInvitation[]
  TeamPosting TeamPosting[]
}

enum InvitationStatus {
  REQUESTED
  PENDING
}

model TeamInvitation {
  id        Int              @id @default(autoincrement())
  teamId    Int
  playerId  Int
  createdAt DateTime         @default(now())
  status    InvitationStatus

  team   Team          @relation(fields: [teamId], references: [id])
  player PlayerAccount @relation(fields: [playerId], references: [id])
}

enum PostingStatus {
  OPEN
  CLOSED
}

model TeamPosting {
  id          Int           @id @default(autoincrement())
  teamId      Int
  title       String
  rolesNeeded LeagueRole[]
  status      PostingStatus @default(OPEN)
  description String        @default("")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  team Team @relation(fields: [teamId], references: [id])
}

model PlayerPosting {
  id          Int           @id @default(autoincrement())
  playerId    Int
  title       String
  status      PostingStatus @default(OPEN)
  description String        @default("")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  player PlayerAccount @relation(fields: [playerId], references: [id])
}

enum MatchType {
  Queue
  Team
}

enum MatchStatus {
  SCHEDULED
  STARTING
  ONGOING
  COMPLETED
}

model Lobby {
  id          Int         @id @default(autoincrement())
  title       String
  description String      @default("")
  ranked      Boolean     @default(false)
  status      MatchStatus @default(SCHEDULED)
  matchType   MatchType
  date        DateTime
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now())
  ownerId     Int?

  owner   PlayerAccount? @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  players LobbyPlayer[]
  match   Match?
}

model LobbyPlayer {
  id       Int      @id @default(autoincrement())
  lobbyId  Int
  playerId Int?
  team     Int // 1 or 2
  ready    Boolean  @default(false)
  joinedAt DateTime @default(now())

  lobby            Lobby             @relation(fields: [lobbyId], references: [id])
  player           PlayerAccount?    @relation(fields: [playerId], references: [id], onDelete: SetNull)
  matchParticipant MatchParticipant?
}

model Match {
  id          Int      @id @default(autoincrement())
  lobbyId     Int      @unique
  riotMatchId String   @unique
  createdAt   DateTime @default(now())
  duration    Int?
  winningTeam Int? // 1 or 2 || 100 OR 200 - RIOT API response

  lobby        Lobby              @relation(fields: [lobbyId], references: [id])
  participants MatchParticipant[]
}

// DENORMALIZED FOR DISPLAYING IN HISTORY WITHOUT ASKING RIOT API
model MatchParticipant {
  id         Int        @id @default(autoincrement())
  championId Int
  kills      Int
  deaths     Int
  assists    Int
  cs         Int
  goldEarned Int
  items      Int[] // item IDs
  spells     Int[] // summoner spells
  role       LeagueRole
  puuid      String

  // RELATIONS
  matchId       Int
  lobbyPlayerId Int  @unique
  // DENORMALIZED FOR FAST LOOKUP'S
  playerId      Int?

  match       Match          @relation(fields: [matchId], references: [id])
  lobbyPlayer LobbyPlayer    @relation(fields: [lobbyPlayerId], references: [id])
  player      PlayerAccount? @relation(fields: [playerId], references: [id], onDelete: SetNull)
}
